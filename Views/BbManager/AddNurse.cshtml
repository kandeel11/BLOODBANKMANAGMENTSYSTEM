@model NurseStaff

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Add Nurse";
}

<body>
    <div id="page-container" style="margin-top: 50px; position: relative; min-height: 84vh;">
        <div class="container">
            <div id="content-wrap" style="padding-bottom: 50px;">
                <div class="row">
                    <div class="col-lg-6">
                        <h1 class="mt-4 mb-3">Add Nurse</h1>
                    </div>
                </div>
                <form method="post" asp-action="AddNurse" asp-controller="BbManager">
                    <div class="row">
                        <div class="col-lg-4 mb-4">
                            <div class="font-italic">Nurse Name<span style="color:red">*</span></div>
                            <div><input asp-for="NurseName" type="text" class="form-control" required></div>
                        </div>
                        <div class="col-lg-4 mb-4">
                            <div class="font-italic">Phone Number</div>
                            <div><input asp-for="NursePhNo" type="text" class="form-control"></div>
                        </div>
                        <div class="col-lg-4 mb-4">
                            <div class="font-italic">Hospital Name<span style="color:red">*</span></div>
                            <select asp-for="HospitalId" asp-items="@(new SelectList(ViewBag.HospitalList, "HospId", "HospName"))" class="form-control" required>
                                <option value="">Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 mb-4">
                            <div>
                                <input type="submit" asp-action="AddNurse" asp-controller="BbManager" class="btn btn-primary" value="Submit" style="cursor:pointer">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <form method="post" asp-action="Index" asp-controller="Home" class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4" style="float:left">
                    <button class="btn btn-primary" type="submit">Go to Login Page</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
