@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false" style="font-weight: bold; color: white;">
                <span class="glyphicon glyphicon-user"></span>&nbsp&nbsp User
            </a>
            <div class="dropdown-menu dropdown-menu-right" style="background-color: #D6EAF8;">
                <a class="dropdown-item" asp-action="ChangePassword" asp-controller="BbManager" style="color: #DC7633;">
                    Change Password
                </a>
                <a class="dropdown-item" asp-action="Index" asp-controller="Home" style="color: #D35400;">
                    Logout
                </a>
            </div>

        </li>
    </ul>
</div>

<body>
    <div class="container">

    <div class="content-wrapper">
        <div class="panel panel-default panel-info">
            <div class="panel-body panel-info">
                <div class="stat-panel">
                        <div class="stat-panel-number h1">@ViewBag.DonorCount</div>
                        <div class="stat-panel-title text-uppercase">Blood Donors Available</div>
                </div>
            </div>
            <div class="panel-footer">
                <a class="btn btn-primary" href="@Url.Action("DonorList", "BbManager")">Full Detail <i class="fa fa-arrow-right"></i></a>
            </div>
        </div>

        <div class="panel panel-default panel-info">
            <div class="panel-body panel-info">
                <div class="stat-panel">
                        <div class="stat-panel-number h1">@ViewBag.NeedBloodCount</div>
                        <div class="stat-panel-title text-uppercase">All User Queries</div>
                </div>
            </div>
            <div class="panel-footer">
                    <a class="btn btn-primary" href="@Url.Action("NeedBloodList", "BbManager")">Full Detail <i class="fa fa-arrow-right"></i></a>
            </div>
        </div>

        <form method="post" name="" action="@Url.Action("SignIn", "BbManager")" class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4" style="float:left">
                    <button class="btn btn-primary" name="submit" type="submit">Go to Login Page</button>
                </div>
            </div>
        </form>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
